    {{component-option optionId="isFooterFixed" default="false" description="toggle to add a fixed footer to your modal"}}
  {{/options-panel}}


    <div class="section">
        <h4 class="col s12 header">Modal</h4>
        {{#md-btn action='openModal' class="open-modal-button"}}Open modal{{/md-btn}}
