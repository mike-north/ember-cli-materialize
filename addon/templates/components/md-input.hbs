{{#if icon}}
  <i class="{{icon}} prefix" {{action 'doAction'}}></i>
{{/if}}

{{input id=id
  value=value
  classNameBindings="validate:validate: isValid:valid: isInvalid:invalid:"
  type=type
  required=required
  pattern=pattern
  maxlength=maxlength
  readonly=readonly
  disabled=disabled
  autocomplete=autocomplete
  autofocus=autofocus
  step=step
  min=min
  max=max
  enter='doAction'}}
<label for="{{id}}">{{label}}</label>

{{#if clearButton}}
  <span class="clear" {{action 'clear'}}>&times;</span>
{{/if}}

<small class="red-text">
  {{#if errors}} {{errors.firstObject}} {{else}} &nbsp; {{/if}}
</small>
