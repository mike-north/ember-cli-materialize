{{#if icon}}
<i class="material-icons prefix">{{icon}}</i>
{{/if}}
{{input
  value=value
  id=_inputId
  type=type
  placeholder=placeholder
  disabled=disabled
  autocomplete=autocomplete
  autofocus=autofocus
  class=_classesForInput
  key-up=(action 'onKeyUp')
  key-press=(action 'onKeyDown')
  key-press=(action 'onChange')
  focus-out=(action 'onBlur')
  enter=(action 'onEnter')
}}
<label
  for={{_inputId}}
  class="{{labelClass}} {{if active 'active'}}"
  data-error={{error}}>
  {{label}}
</label>
{{yield}}